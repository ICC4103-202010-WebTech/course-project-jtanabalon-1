<div class="col-md-4" data-event-name="<%= event.title %>" data-start-date="<%= event.start_date %>">
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <p class="card-text"><%= link_to event.title, event %></p>
      <p class="card-text"><%= event.start_date %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", event %></button>
        </div>
      </div>
    </div>
  </div>
</div>