<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Users</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.description %></td>
        <td><%= organization.users_id %></td>
        <td><%= organization.admin_id %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Members', api_v1_organization_members_path %></td>
        <td><%= link_to 'Events', api_v1_organization_events_path %></td>
        <td><%= link_to 'Admins', api_v1_organization_admins_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

